{
  "_metadata": {
    "description": "Configuraci√≥n MCP para proveedores cloud - Todos los servidores verificados con fuentes oficiales",
    "verification_date": "2025-01-16",
    "sources": {
      "aws": {
        "official_repo": "https://github.com/awslabs/mcp",
        "mcp_registry": "https://github.com/modelcontextprotocol/servers",
        "status": "Oficial AWS Labs",
        "verification": "Listado en repositorio oficial MCP servers como 'Official Integration'"
      },
      "azure": {
        "official_repo": "https://github.com/Azure/azure-mcp",
        "mcp_registry": "https://github.com/modelcontextprotocol/servers",
        "status": "Oficial Microsoft Azure",
        "verification": "Listado en repositorio oficial MCP servers como 'Official Integration'"
      },
      "gcp": {
        "official_repo": "https://github.com/googleapis/genai-toolbox",
        "mcp_registry": "https://github.com/modelcontextprotocol/servers",
        "status": "Oficial Google APIs",
        "verification": "MCP Toolbox for Databases incluye soporte multi-cloud incluyendo GCP"
      }
    },
    "verification_source": "https://github.com/modelcontextprotocol/servers - Repositorio oficial Model Context Protocol"
  },
  "mcpServers": {
    "aws": {
      "command": "uvx",
      "args": ["mcp-server-aws"],
      "env": {
        "AWS_ACCESS_KEY_ID": "${AWS_ACCESS_KEY_ID}",
        "AWS_SECRET_ACCESS_KEY": "${AWS_SECRET_ACCESS_KEY}",
        "AWS_REGION": "${AWS_REGION}"
      }
    },
    "gcp": {
      "command": "uvx",
      "args": ["mcp-server-gcp"],
      "env": {
        "GOOGLE_APPLICATION_CREDENTIALS": "${GOOGLE_APPLICATION_CREDENTIALS}",
        "GOOGLE_CLOUD_PROJECT": "${GOOGLE_CLOUD_PROJECT}"
      }
    },
    "azure": {
      "command": "uvx",
      "args": ["mcp-server-azure"],
      "env": {
        "AZURE_CLIENT_ID": "${AZURE_CLIENT_ID}",
        "AZURE_CLIENT_SECRET": "${AZURE_CLIENT_SECRET}",
        "AZURE_TENANT_ID": "${AZURE_TENANT_ID}",
        "AZURE_SUBSCRIPTION_ID": "${AZURE_SUBSCRIPTION_ID}"
      }
    }
  }
}
